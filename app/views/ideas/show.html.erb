<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @idea.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @idea.description %>
</p>

<p>
  <strong>Picture:</strong>
<%= image_tag(@idea.picture_url, :width => 200) if @idea.picture.present? %>
<div class="fb-comments" data-href="https://railsgirls-lylychu.c9users.io" data-numposts="10"></div>
<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.body %></p>
    <%= image_tag(@idea.picture_url, :width => 100) if @idea.picture.present? %>
    <p>
      <%= link_to comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %>
    <%= link_to like_comment_path(comment) do %>
       <span class="glyphicon glyphicon-thumbs-up"><%= "#{comment.like_count}" %></span>
    <% end %>
    </p>
    <p><%= link_to 'Reply', comment_path(comment), method: :reply, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<%= render 'comments/form' %>
</p>

<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', ideas_path %>
